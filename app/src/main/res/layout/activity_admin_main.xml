<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.user.BookmarkActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Trang chủ Admin"
        android:textStyle="bold"
        android:textColor="@color/darkBlue"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/adminAllTour"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Tất cả Tour"
        android:drawableEnd="@drawable/all"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/adminAddTour"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Thêm Tour"
        android:drawableEnd="@drawable/add"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminAllTour" />

    <Button
        android:id="@+id/adminAllOrder"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Tất cả đơn hàng"
        android:drawableEnd="@drawable/cart"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/adminAddTour"
        app:layout_constraintStart_toStartOf="@+id/adminAddTour"
        app:layout_constraintTop_toBottomOf="@+id/adminAddTour" />

    <Button
        android:id="@+id/adminLogoutBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:drawableEnd="@drawable/exit"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/adminAllOrder"
        app:layout_constraintStart_toStartOf="@+id/adminAllOrder"
        app:layout_constraintTop_toBottomOf="@+id/adminAllOrder" />


</androidx.constraintlayout.widget.ConstraintLayout>